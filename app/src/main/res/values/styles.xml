<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/primary</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>
<!--    <style name="SplashTheme" parent="AppTheme">-->
<!--        <item name="windowNoTitle">true</item>-->
<!--        <item name="android:windowIsTranslucent">true</item>-->
<!--    </style>-->
    <style name="SettingItemStyle">
        <item name="android:background">#fff</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">46.67dp</item>
        <item name="android:orientation">horizontal</item>
    </style>


    <style name="checkBoxStyle">
        <item name="android:button">@drawable/checkbox_style</item>
    </style>
    <style name="info_left_txt_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:textColor">#FF2C2C2C</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="info_left_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">14dp</item>
        <item name="android:textColor">#FF2C2C2C</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="TabLayoutTextStyle" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="TabText">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#BABABA</item>
        <item name="textAllCaps">false</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>
    <!--项目组下拉选择-->
    <style name="photo_dialog__animstyle">
        <item name="android:windowEnterAnimation">@anim/photo_dialog_in_anim</item>
        <item name="android:windowExitAnimation">@anim/photo_dialog_out_anim</item>
    </style>
    <style name="transparentFrameWindowStyle" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/photo_choose_bg</item>
    </style>
    <style name="CallNumberView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/call_number_view_height</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="CallNumberText">
        <item name="android:layout_width">@dimen/call_number_view_width</item>
        <item name="android:layout_height">@dimen/call_number_view_height</item>
        <item name="android:textAlignment">gravity</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/call_number_text_size</item>
    </style>

    <style name="CallNumberDivider">
        <item name="android:layout_width">@dimen/call_number_view_width</item>
        <item name="android:layout_height">@dimen/underscore_height</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:background">@color/blue_alpha_2</item>
    </style>

    <style name="DialNumberView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="DialNumberRowLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dialer_number_height</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">@dimen/margin_large</item>
    </style>

    <style name="DialNumberImage">
        <item name="android:layout_width">@dimen/dialer_number_width</item>
        <item name="android:layout_height">@dimen/dialer_number_height</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="PeerNumDigitText">
        <item name="android:layout_width">@dimen/peer_number_digit_width</item>
        <item name="android:layout_height">@dimen/peer_number_digit_height</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/peer_number_digit_size</item>
        <item name="android:textAlignment">gravity</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="PortraitAnimView">
        <item name="android:layout_width">@dimen/default_peer_anim_outline</item>
        <item name="android:layout_height">@dimen/default_peer_anim_outline</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:visibility">gone</item>
        <item name="android:src">@drawable/anim_layer_drawable</item>
    </style>
</resources>
