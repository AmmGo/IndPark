<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".uis.fragments.TabAlarmCountFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/tab_s_ep"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:text="园区环保监测"
                    android:textColor="#3A3A3A" />

                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/pieChart1"
                    android:layout_width="230dp"
                    android:layout_height="230dp"
                    android:layout_centerInParent="true" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/tab_s_ep"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="20dp"
                    android:paddingRight="20dp"
                    android:paddingLeft="20dp"
                    android:paddingBottom="10dp"
                    android:text="园区危险源监测"
                    android:textColor="#3A3A3A" />

                <TextView
                    android:id="@+id/tv_sum"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/tab_alarm_wxy_bg"
                    android:gravity="center|left"
                    android:paddingLeft="10dp"
                    android:text="危险源报警：0"
                    android:textColor="#3A3A3A" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="高高报"
                            android:textColor="#3A3A3A" />

                        <TextView
                            android:id="@+id/tv_ggb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="#BE3D3D"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <com.xuexiang.xui.widget.progress.HorizontalProgressView
                        android:id="@+id/hp_ggb"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        app:hpv_end_color="#BE3D3D"
                        app:hpv_end_progress="0"
                        app:hpv_isTracked="true"
                        app:hpv_progress_duration="2600"
                        app:hpv_progress_textColor="#696969"
                        app:hpv_progress_textVisibility="false"
                        app:hpv_start_color="#BE3D3D"
                        app:hpv_track_color="#f4f4f4"
                        app:hpv_track_width="8dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="高报"
                            android:textColor="#3A3A3A" />

                        <TextView
                            android:id="@+id/tv_gb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="#3498FF"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <com.xuexiang.xui.widget.progress.HorizontalProgressView
                        android:id="@+id/hp_gb"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        app:hpv_end_color="#3498FF"
                        app:hpv_end_progress="0"
                        app:hpv_isTracked="true"
                        app:hpv_progress_duration="2600"
                        app:hpv_progress_textColor="#696969"
                        app:hpv_progress_textVisibility="false"
                        app:hpv_start_color="#3498FF"
                        app:hpv_track_color="#f4f4f4"
                        app:hpv_track_width="8dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="低低报"
                            android:textColor="#3A3A3A" />

                        <TextView
                            android:id="@+id/tv_ddb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="#F9D118"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <com.xuexiang.xui.widget.progress.HorizontalProgressView
                        android:id="@+id/hp_ddb"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        app:hpv_end_color="#F9D118"
                        app:hpv_end_progress="0"
                        app:hpv_isTracked="true"
                        app:hpv_progress_duration="2600"
                        app:hpv_progress_textColor="#696969"
                        app:hpv_progress_textVisibility="false"
                        app:hpv_start_color="#F9D118"
                        app:hpv_track_color="#f4f4f4"
                        app:hpv_track_width="8dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="低报"
                            android:textColor="#3A3A3A" />

                        <TextView
                            android:id="@+id/tv_db"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="#6ADA18"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <com.xuexiang.xui.widget.progress.HorizontalProgressView
                        android:id="@+id/hp_db"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        app:hpv_end_color="#6ADA18"
                        app:hpv_end_progress="0"
                        app:hpv_isTracked="true"
                        app:hpv_progress_duration="2600"
                        app:hpv_progress_textColor="#696969"
                        app:hpv_progress_textVisibility="false"
                        app:hpv_start_color="#6ADA18"
                        app:hpv_track_color="#f4f4f4"
                        app:hpv_track_width="8dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</FrameLayout>